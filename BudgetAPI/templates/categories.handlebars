<div class="card-deck">
    {{#each categories}}
    <div class="card" style="width: 30rem;">
        <div class="card-body">
            <h4 class="card-title">Category</h4>
            <p class="card-text category-name">{{name}}</p>

            <form class="form-inline category-name-edit">
                <div class="form-group">
                    <input type="text" class="form-control category-input-name-edit" value="{{name}}" />
                </div>
                <div class="form-group">
                    <input type="hidden" class="form-control category-input-id" value="{{categoryID}}" />
                </div>
                <button type="submit" class="btn btn-primary btn-category-edit-submit">Done</button>
            </form>
        
            <p class="btn btn-primary btn-category-edit">Edit</p>
            <p class="btn btn-primary btn-category-remove">Remove</p>
        </div>
    </div>
    {{/each}}
    <div class="card" style="width: 30rem;">
        <div class="card-body">
            <h4 class="card-title">Add New</h4>

            <form class="form-inline category-name-add">
                <div class="form-group">
                    <input type="text" class="form-control" id="input-category-name-add" placeholder="category name" />
                </div>
            </form>

            <p class="btn btn-primary btn-category-add-new">Add</p>
        </div>
    </div>
</div>